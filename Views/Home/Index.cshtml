@model IEnumerable<EmpInterview.Models.EmployeeViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Add")
</p>
<table class="table">
    <tr>
        <th>
            Sr.No.
        </th>
        <th>
            Name
        </th>
        <th>
            Designation
        </th>
        <th>
            Department
        </th>
        <th>
            Gender
        </th>
        <th>
            Salary
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Sr_No_)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dsg)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dept)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Sr_No_ }) |
            @Html.ActionLink("Details", "Details", new { id = item.Sr_No_ }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Sr_No_ })
        </td>
    </tr>
}

</table>
